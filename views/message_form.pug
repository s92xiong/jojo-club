extends layout 

block content 
  form.auth-form(action="/create-message" method="POST")
    h2= title 
    div.title-container
      label(for="messageTitle") Title:
      input#messageTitle(type="text" placeholder="Enter a title" name="messageTitle" required="true" maxLength="50")
    div.text-container
      label(for="messageText") Message:
      input#messageText(type="text" placeholder="Enter a message" name="messageText" required="true")
    button(type="submit") Submit Message

  if (errors)
    p #{errors}