extends layout

block content
  if (messages)
    div.messages-container
      if (!user)
        div.msg-container
          div.msg-container-inner-left
            div.msg-container-inner-avatar.speedwagon
          div.msg-container-inner-right
            h4.msg-title Hello, World!
            p.msg-text To see additional information, register an account, then use the passcode "jojo" to become a member of The JoJo Club!
            div.msg-info
              p Posted by 
                span.msg-username Speedwagon
              p.msg-date 1868-04-04
      each message in messages
        div.msg-container
          div.msg-container-inner-left
            if (!user || !user.member) 
              div.msg-container-inner-avatar.giorno-anon
            else 
              if (user && user.member)
                if (message.user.avatar==="jonathan")
                  div.msg-container-inner-avatar.jonathan
                if (message.user.avatar==="joseph")
                  div.msg-container-inner-avatar.joseph
                if (message.user.avatar==="jotaro")
                  div.msg-container-inner-avatar.jotaro
                if (message.user.avatar==="josuke")
                  div.msg-container-inner-avatar.josuke
                if (message.user.avatar==="giorno")
                  div.msg-container-inner-avatar.giorno
                if (message.user.avatar==="jolyne")
                  div.msg-container-inner-avatar.jolyne
          div.msg-container-inner-right
            //- Render usernames of messages only if the user is logged in and is a member
            if (user && user.member)
              h4.msg-title= message.title
              p.msg-text= message.text
              div.msg-info
                p Posted by 
                  span.msg-username #{message.user.username}
                p.msg-date= message.date
            else
              h4.msg-title= message.title
              p.msg-text= message.text
              div.msg-info
                p Posted by 
                  span.msg-username Anonymous
                p Date: N/A
            if (user && user.admin)
              div.delete-msg
                form(action="" method="POST")
                  input#messageId(type="hidden", name="messageId", required="true", value=message._id)
                  button(type="submit") Delete

