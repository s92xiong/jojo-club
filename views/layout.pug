      nav.navbar 
        a(href="/").title
          h3 Members Only
        //- If User is NOT logged in
        if (!user)
          ul 
            li 
              a(href="/log-in") Log in 
            li 
              a(href="/sign-up") Sign up
        //- If User IS logged in
        else 
          ul
            a(href="/create-message") 
              li Create Message
            a(href="/member") 
              li Member
            a(href="/admin")  
              li Admin
            a(href="/log-out") 
              li Log out 
      block content
